<?xml version="1.0" encoding="UTF-8"?>
<casConsumerDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>gr.ilsp.nlp.casconsumers.CoNLL2007CasConsumer</implementationName>
  <processingResourceMetaData>
    <name>CoNLL2007 Cas Consumer</name>
    <description>Writes sentences from the CAS in the CoNLL 2007 format.</description>
    <version>1.12</version>
    <vendor>Institute for Language and Speech Processing</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>OutputDirectory</name>
        <description>Directory where the output files will be written</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>AppendExt</name>
        <description>Extension to be appended to the output files.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>StripExt</name>
        <description>Extension to be stripped from the input files.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>PrintDepRels</name>
        <description>If true, prints dependency relations</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>StripExt</name>
        <value>
          <string>txt</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>OutputDirectory</name>
        <value>
          <string>.</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>AppendExt</name>
        <value>
          <string>conll</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>PrintDepRels</name>
        <value>
          <boolean>false</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import name="ilsp-typesystem"/>
      </imports>
    </typeSystemDescription>
    <typePriorities>
      <priorityList>
        <type>gr.ilsp.types.Paragraph</type>
        <type>gr.ilsp.types.Sentence</type>
        <type>gr.ilsp.types.Token</type>
      </priorityList>
    </typePriorities>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs>
          <type allAnnotatorFeatures="true">gr.ilsp.nlp.types.Header</type>
          <type allAnnotatorFeatures="true">gr.ilsp.types.Token</type>
          <type allAnnotatorFeatures="true">gr.ilsp.types.Paragraph</type>
          <type allAnnotatorFeatures="true">gr.ilsp.types.Sentence</type>
        </inputs>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>false</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</casConsumerDescription>
