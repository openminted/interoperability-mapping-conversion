<?xml version="1.0" encoding="UTF-8"?>
<casConsumerDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>uk.ac.nactem.uima.rdf.RdfWriter</implementationName>
  <processingResourceMetaData>
    <name>RDF Writer</name>
    <description>Saves Common Annotation Structures into RDF files.</description>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>outputFolder</name>
        <description>A folder where RDF files will be written to.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>outputFilePrefix</name>
        <description>A name that will be attached to the beginning of an output filename. Filenames will have the form of "&lt;outputFilePrefix&gt;&lt;count&gt;.rdf".</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>outputFolder</name>
        <value>
          <string>./</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>outputFilePrefix</name>
        <value>
          <string>cas</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription/>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>false</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</casConsumerDescription>
