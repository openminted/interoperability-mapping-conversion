<?xml version="1.0" encoding="UTF-8"?>
<casConsumerDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
	<implementationName>uk.ac.nactem.uima.SFTPXMIWriterUima
	</implementationName>
	<processingResourceMetaData>
		<name>SFTP XMI Writer</name>
		<description>Saves Common Annotation Structures to an SFTP server</description>
		<version>1.0</version>
		<vendor>NaCTeM</vendor>
		<configurationParameters>
			<!-- TODO private key -->
			<configurationParameter>
				<name>server</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>remoteDirectory</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>username</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>password</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>port</name>
				<type>Integer</type>
				<multiValued>false</multiValued>
				<mandatory>false</mandatory>
			</configurationParameter>
			
			<configurationParameter>
				<name>recorderEnabled</name>
				<type>Boolean</type>
				<multiValued>false</multiValued>
				<mandatory>true</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>recorderJdbcUrl</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>false</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>recorderUsername</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>false</mandatory>
			</configurationParameter>
			<configurationParameter>
				<name>recorderPassword</name>
				<type>String</type>
				<multiValued>false</multiValued>
				<mandatory>false</mandatory>
			</configurationParameter>
		</configurationParameters>
		<configurationParameterSettings>
			<nameValuePair>
				<name>port</name>
				<value>
					<integer>22</integer>
				</value>
			</nameValuePair>
			<nameValuePair>
				<name>remoteDirectory</name>
				<value>
					<string>.</string>
				</value>
			</nameValuePair>
		</configurationParameterSettings>
		<typeSystemDescription>
			<imports>
				<import name="org.apache.uima.examples.SourceDocumentInformation" />
			</imports>
		</typeSystemDescription>
		<typePriorities />
		<fsIndexCollection />
		<capabilities>
			<capability>
				<inputs />
				<outputs />
				<languagesSupported />
			</capability>
		</capabilities>
		<operationalProperties>
			<modifiesCas>false</modifiesCas>
			<multipleDeploymentAllowed>false</multipleDeploymentAllowed>
			<outputsNewCASes>false</outputsNewCASes>
		</operationalProperties>
	</processingResourceMetaData>
	<resourceManagerConfiguration />
</casConsumerDescription>
