<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <implementationName>de.tudarmstadt.ukp.dkpro.core.io.jwpl.WikipediaRevisionReader</implementationName>
    <processingResourceMetaData>
        <name>de.tudarmstadt.ukp.dkpro.core.io.jwpl.WikipediaRevisionReader</name>
        <description>Reads Wikipedia page revisions.</description>
        <version>1.8.0-SNAPSHOT</version>
        <vendor>DKPro Core Project</vendor>
        <copyright>Copyright 2010-2015
                            Ubiquitous Knowledge Processing (UKP) Lab
                            Technische Universit√§t Darmstadt</copyright>
        <configurationParameters>
            <configurationParameter>
                <name>OutputPlainText</name>
                <description>Whether the reader outputs plain text or wiki markup.</description>
                <type>Boolean</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>PageBuffer</name>
                <description>The page buffer size (#pages) of the page iterator.</description>
                <type>Integer</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>RevisionIdsFromFile</name>
                <description>Defines the path to a file containing a line-separated list of revision ids of the revisions
that should be retrieved. (Optional)</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>RevisionIdFromArray</name>
                <description>Defines an array of revision ids of the revisions that should be retrieved. (Optional)</description>
                <type>String</type>
                <multiValued>true</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>Host</name>
                <description>The host server.</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>Database</name>
                <description>The name of the database.</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>User</name>
                <description>The username of the database account.</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>Password</name>
                <description>The password of the database account.</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>Language</name>
                <description>The language of the Wikipedia that should be connected to.</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>CreateDBAnno</name>
                <description>Sets whether the database configuration should be stored in the CAS,
 so that annotators down the pipeline can access additional data.</description>
                <type>Boolean</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
        </configurationParameters>
        <configurationParameterSettings>
            <nameValuePair>
                <name>OutputPlainText</name>
                <value>
                    <boolean>true</boolean>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>PageBuffer</name>
                <value>
                    <integer>1000</integer>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>CreateDBAnno</name>
                <value>
                    <boolean>false</boolean>
                </value>
            </nameValuePair>
        </configurationParameterSettings>
        <typeSystemDescription/>
        <fsIndexCollection/>
        <capabilities>
            <capability>
                <inputs/>
                <outputs>
                    <type>de.tudarmstadt.ukp.dkpro.core.io.jwpl.type.DBConfig</type>
                    <type>de.tudarmstadt.ukp.dkpro.core.api.metadata.type.DocumentMetaData</type>
                    <type>de.tudarmstadt.ukp.dkpro.core.io.jwpl.type.WikipediaRevision</type>
                </outputs>
                <languagesSupported/>
            </capability>
        </capabilities>
        <operationalProperties>
            <modifiesCas>true</modifiesCas>
            <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
            <outputsNewCASes>true</outputsNewCASes>
        </operationalProperties>
    </processingResourceMetaData>
</collectionReaderDescription>
