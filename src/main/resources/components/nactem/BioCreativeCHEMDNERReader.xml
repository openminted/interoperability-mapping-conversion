<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>uk.ac.nactem.uima.bioc.BioCreativeCHEMDNERReader</implementationName>
  <processingResourceMetaData>
    <name>BioCreative CHEMDNER Reader</name>
    <description>Reads data prepared specifically for the BioCreative IV's CHEMDNER track. This component transcribes annotations into the BioC type system.</description>
    <version>0.1</version>
    <vendor>The National Centre for Text Mining (NaCTeM)</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>abstractsFile</name>
        <description>A file with a set of abstracts</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>annotationsFile</name>
        <description>A file with standoff annotations</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings/>
    <typeSystemDescription>
      <imports>
        <import name="uk.ac.nactem.uima.BioCTypeSystem"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>
